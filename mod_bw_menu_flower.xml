<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.0"
	client="site"
	method="upgrade">
	<name>I Am a Flower</name>
	<author>Brian Williford</author>
	<creationDate>December 2012</creationDate>
	<copyright>Copyright (C) 2012 Brian Williford. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@ohmybrain.com</authorEmail>
	<authorUrl>www.brianwilliford.com</authorUrl>
	<version>3.0.0</version>
	<description>MOD_BW_MENU_FLOWER_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_bw_menu_flower">mod_bw_menu_flower.php</filename>
		<folder>tmpl</folder>
		<folder>helpers</folder>
		<folder>images</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_bw_menu_flower.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_bw_menu_flower.ini</language>
		<language tag="en-GB">en-GB.mod_bw_menu_flower.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_MENU" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="include_scripts"
					type="radio"
					class="btn-group"
					default="1"
					label="MOD_BW_MENU_FLOWER_FIELD_SCRIPTS_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_SCRIPTS_DESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
				<field
					name="menutype"
					type="menu"
					label="MOD_BW_MENU_FLOWER_FIELD_MENUTYPE_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_MENUTYPE_DESC" />
				<field
					name="active"
					type="menuitem"
					label="MOD_BW_MENU_FLOWER_FIELD_ACTIVE_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_ACTIVE_DESC"
					>
					<option value="">JCURRENT</option>
				</field>
				<field
					name="startLevel"
					type="list"
					default="1"
					label="MOD_BW_MENU_FLOWER_FIELD_STARTLEVEL_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_STARTLEVEL_DESC"
				>
					<option value="1">J1</option>
					<option value="2">J2</option>
					<option value="3">J3</option>
					<option value="4">J4</option>
					<option value="5">J5</option>
					<option value="6">J6</option>
					<option value="7">J7</option>
					<option value="8">J8</option>
					<option value="9">J9</option>
					<option value="10">J10</option>
				</field>

				<field
					name="endLevel"
					type="list"
					default="0"
					label="MOD_BW_MENU_FLOWER_FIELD_ENDLEVEL_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_ENDLEVEL_DESC"
					>
					<option value="0">JALL</option>
					<option value="1">J1</option>
					<option value="2">J2</option>
					<option value="3">J3</option>
					<option value="4">J4</option>
					<option value="5">J5</option>
					<option value="6">J6</option>
					<option value="7">J7</option>
					<option value="8">J8</option>
					<option value="9">J9</option>
					<option value="10">J10</option>
				</field>

				
				<field
					name="showAllChildren"
					type="radio"
					class="btn-group"
					default="0"
					label="MOD_BW_MENU_FLOWER_FIELD_ALLCHILDREN_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_ALLCHILDREN_DESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
				
				<field
					name="css_wrapper_color"
					type="text"
					default=""
					label="MOD_BW_MENU_FLOWER_FIELD_WRAPPER_COLOR_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_WRAPPER_COLOR_DESC" />
					
				<field
					name="css_wrapper_size"
					type="text"
					default="360"
					label="MOD_BW_MENU_FLOWER_FIELD_WRAPPER_SIZE_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_WRAPPER_SIZE_DESC" />
				
				<field
					name="css_flower_size_start"
					type="text"
					default="50"
					label="MOD_BW_MENU_FLOWER_FIELD_FLOWER_SIZE_START_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_FLOWER_SIZE_START_DESC" />
					
				<field
					name="css_flower_size_end"
					type="text"
					default="100"
					label="MOD_BW_MENU_FLOWER_FIELD_FLOWER_SIZE_END_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_FLOWER_SIZE_END_DESC" />
				
				<field
					name="pedal_rotate"
					type="radio"
					class="btn-group"
					default="1"
					label="MOD_BW_MENU_FLOWER_FIELD_PEDAL_ROTATE_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_PEDAL_ROTATE_DESCESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
				
				<field
					name="type"
					type="text"
					default="jpg"
					label="MOD_BW_MENU_FLOWER_FIELD_TYPE_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_TYPE_DESC" />
				<field
					name="folder"
					type="text"
					default="modules/mod_bw_menu_flower/images/"
					label="MOD_BW_MENU_FLOWER_FIELD_FOLDER_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_FOLDER_DESC" />
				<field
					name="link"
					type="text"
					label="MOD_BW_MENU_FLOWER_FIELD_LINK_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_LINK_DESC" />
				<field
					name="width"
					type="text"
					label="MOD_BW_MENU_FLOWER_FIELD_WIDTH_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_WIDTH_DESC" />
				<field
					name="height"
					type="text"
					label="MOD_BW_MENU_FLOWER_FIELD_HEIGHT_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_HEIGHT_DESC" />
					
				<field
					name="begin_message"
					type="text"
					default="START HERE"
					label="MOD_BW_MENU_FLOWER_FIELD_BEGIN_MESSAGE_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_BEGIN_MESSAGE_DESC" />
					
				<field
					name="control_panel"
					type="radio"
					class="btn-group"
					default="0"
					label="MOD_BW_MENU_FLOWER_FIELD_CONTROLS_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_CONTROLS_DESC">
					<option
						value="0">JNO</option>
					<option
						value="1">JYES</option>
				</field>
					
					
			</fieldset>

			<fieldset
				name="advanced">
				<field
					name="tag_id"
					type="text"
					label="MOD_BW_MENU_FLOWER_FIELD_TAG_ID_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_TAG_ID_DESC" />

				<field
					name="class_sfx"
					type="text"
					label="MOD_BW_MENU_FLOWER_FIELD_CLASS_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_CLASS_DESC" />

				<field
					name="window_open"
					type="text"
					label="MOD_BW_MENU_FLOWER_FIELD_TARGET_LABEL"
					description="MOD_BW_MENU_FLOWER_FIELD_TARGET_DESC" />

				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
